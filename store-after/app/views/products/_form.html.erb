<%= form_for @product do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :product_type_id %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>

  <%= f.fields_for :product_properties do |builder| %>
      <%= render "products/fields/#{builder.object.field_type}", f: builder %>
      <%= builder.hidden_field :product_field_id %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
